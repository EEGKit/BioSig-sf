### JNI ###
# https://stackoverflow.com/questions/5963266/call-c-function-from-java

JAVA_HOME ?= $(realpath $(dir $(realpath $(shell which javac)))/..)

JAVA  ?= $(JAVA_HOME)/bin/java
JAVAC ?= $(JAVA_HOME)/bin/javac
CLASS_PATH ?= $(JAVA_HOME)/bin

libBiosig.so: Biosig.h Biosig.c
	$(CXX) -shared -fPIC \
		-I$(JAVA_HOME)/include \
		-I$(JAVA_HOME)/include/linux \
		Biosig.c -lbiosig -o libBiosig.so

Biosig.h: Biosig.class
	$(JAVAC) -h . Biosig.java

Biosig.class: Biosig.java
	$(JAVAC) Biosig.java

test: libBiosig.so
	#LD_LIBRARY_PATH=. java biosig
	$(JAVA) -Djava.library.path=. Biosig "../data/Newtest17-256.bdf"

clean: 
	-rm *.h
	-rm *.o 
	-rm *.cxx 
	-rm *.so


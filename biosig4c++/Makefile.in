	$(AR) libbiosig.a $(OBJECTS)
libbiosig.dll: $(OBJECTS) libbiosig.pc
	$(LD) -o libbiosig.dll -s -shared -fPIC $(OBJECTS) $(LDLIBS) -Wl,-subsystem,windows,--output-def,libbiosig.def,--out-implib,libbiosig.dll.a

libbiosig.pc :
	mkdir -p pkgconfig
	echo "# Defines libbiosig.pc"       > "$@"
	echo "prefix=$(prefix)"             >>"$@"
	echo "exec_prefix=$(prefix)"        >>"$@"
	echo "libdir=$(libdir)"         >>"$@"
	echo "includedir=$(includedir)" >>"$@"
	echo                                >>"$@"
	echo "Name: libbiosig"		    >>"$@"
	echo "Description: Biosig library"  >>"$@"
	echo "Version: ${MAJOR_VERSION}.${MINOR_VERSION}.${STEPPING}" >>"$@"
	echo "URL: http://biosig.sf.net"    >>"$@"
	#
	echo "Requires: "                   >> "$@"
	echo "Requires.private: "           >> "$@"
	echo "Cflags: $(DEFINES) "          >> "$@"
	echo "Libs: -lbiosig $(PKG_CONFIG_LIBS)" >> "$@"
	echo "Libs.private: $(LDLIBS)"      >> "$@"

## save2gdf, pdp2gdf
%${BINEXT}: %.c libbiosig.$(DLEXT)
	$(CC) $(DEFINES) $(CFLAGS) "$<" -L. -lbiosig -lstdc++ $(LDLIBS) -o "$@"

physicalunits${BINEXT} : pu.c physicalunits.o
	$(CC) $(DEFINES) $(CFLAGS) $^ $(LDFLAGS) $(LDLIBS) -o "$@"

ifeq (1,@HAVE_LIBB64@)
